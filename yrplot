import matplotlib.pyplot as plt
import pandas as pd
import datetime

filename = ('full_log', datetime.datetime.now().strftime("%Y%m%d"))
filename = str(filename)

data = open(filename, 'r')

timelist = []
templist = []
rainlist  = []
windlist = []


for line in data.readlines():
    line = line.split(' ')
    #del line[0]
    print(line)
    templist.append(line[1])
    rainlist.append(line[2])
    windlist.append(line[3])
    timelist.append(line[4])

del timelist[0]
del templist[0]
del rainlist[0]
del windlist[0]


plt.subplot(1,3,1)
plt.scatter(timelist,templist)
plt.subplot(1,3,2)
plt.scatter(timelist,rainlist)
plt.subplot(1,3,3)
plt.scatter(timelist,windlist)
plt.gcf().autofmt_xdate()
plt.show()
plotname = ('yrplot', datetime.datetime.now().strftime("%Y%m%d"))
plotname = str(plotname)
plt.savefig(plotname)